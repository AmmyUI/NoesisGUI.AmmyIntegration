<UserControl x:Class="SampleData.TestControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ns0="clr-namespace:AmmySidekick;assembly=AmmySidekick" ns0:Ammy.Register="/SampleWPFAmmy;component/Data/TestControl.g.xaml">
  <UserControl.Resources>
    <Style TargetType="{x:Type TextBlock}">
      <Setter Property="Foreground" Value="Blue"/>
      <Setter Property="FontSize" Value="24"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Foreground" Value="Red"/>
        </Trigger>
      </Style.Triggers>
    </Style>
  </UserControl.Resources>
  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
    <TextBlock Text="Ammy works! Noesis works! Hallelujah!" HorizontalAlignment="Center"/>
    <TextBlock Text="(you can edit Ammy code to trigger NoesisGUI reloading)" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Margin="0,10,0,0"/>
  </StackPanel>
</UserControl>